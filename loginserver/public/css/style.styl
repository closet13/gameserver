.comments
    .comment
        border-top 1px solid lightgrey
        display: inline-flex;
        width: 20%;
        padding: 8px;
        box-sizing: border-box;

.servers
    border-bottom 1px #d3d3d3 solid;
    .status
        width 24px;
        height 24px;
        > div
            border-radius 50px;
            width 100%
            height 100%
        .up
            background-color lawngreen
        .down
            background-color red;
    > div
        padding 3px;
        border-left 1px #d3d3d3 solid;